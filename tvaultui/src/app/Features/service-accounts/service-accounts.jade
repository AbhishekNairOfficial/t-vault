script(type='text/ng-template', id='error.html')
    .row
        .top-lg-sep
            .common-header-label.text-center Error
        .top-lg-sep.notification-text {{errorMessage}}
    
    .text-center.bottom-lg-sep.top-lg-sep.notification-button
        .clearfix.bottom-sm-sep
            button.link-style.common-btn.btn.btn-primary.btn-lg(ng-click="close()") Close
script(type='text/ng-template', id='resetPopup.html')
  loading-state(ng-if="isLoadingModalData")
  .top-lg-sep(ng-if="!isLoadingModalData")
    .top-lg-sep
        .common-header-label.text-center Confirmation
    .top-lg-sep.notification-text Are you sure you want to reset the password for this Service Account?
    .text-center.bottom-lg-sep.top-lg-sep.notification-button
      .clearfix.bottom-sm-sep
        button.common-btn.btn.btn-primary.btn-lg(ng-click="resetPasswordForSvcacc()") RESET
      .clearfix
        button.link-style.common-btn.btn.btn-default.btn-lg(ng-click="close()") CANCEL
script(type='text/ng-template', id='decommissionMessagePopup.html')
  loading-state(ng-if="isLoadingModalData")
  .top-lg-sep(ng-if="!isLoadingModalData")
    .top-lg-sep
        .common-header-label.text-center Service Account Decommissioned!
    .top-lg-sep.notification-text.notification-justify {{ decommitionMessage }}
    .text-center.bottom-lg-sep.top-lg-sep.notification-button
      .clearfix.bottom-sm-sep
        button.common-btn.btn.btn-primary.btn-lg(ng-click="offboardNow(svcaccToOffboard)") Close
script(type='text/ng-template', id='offboardWarning.html')
  loading-state(ng-if="isLoadingModalData")
  .top-lg-sep(ng-if="!isLoadingModalData")
    .top-lg-sep
        .common-header-label.text-center Offboarding successful!
    .top-lg-sep.notification-text.notification-justify Offboarding of Service Account has been completed successfully.
    .text-center.bottom-lg-sep.top-lg-sep.notification-button
      .clearfix.bottom-sm-sep
        button.link-style.common-btn.btn.btn-primary.btn-lg(ng-click="cancelOffboard()") CLOSE

.container-fluid
    .container-fluid-wrapper.curved
        .page-header-container.admin
            .header-inner-container
                nav-bar(active-tab="service-accounts" gotoPage="goToPage" nav-tags="adminNavTags")
                .page-header-text SERVICE ACCOUNTS
        .page-content-container.admin
            .right.search-bar-container
                .search-bar(ng-if="!viewPassword")
                    .search-box
                        .search-icon
                            .icon-search
                        .search-input-wrapper
                            input.search-input-box(type='text' placeholder='SEARCH' ng-model="searchValueSvcacc" restrict-special-char minlength="3" maxlength="40" ng-change="filterSvcacc(searchValueSvcacc)")
            md-content.admin-content
                md-tabs(md-dynamic-height md-border-bottom md-selected="selectedIndex")                    
                    md-tab(label="My Accounts")
                        md-content(class="md-padding md-content-wrapper page-content-wrapper md-serviceaccount" ng-init="displayGrid" ng-if="!viewPassword")
                            .new-container.page-content-container
                                .md-content-inner-wrapper
                                    div.data-management-content
                                        div.svcdescription(ng-show="svcaccOnboardedData.keys.length>0 && !isOffboarding") Following are list of the Service Accounts which you have read or reset permission. Click the Service Account to read or reset password.
                                        .row.change-svc-table-container
                                            loading-state(ng-if='isLoadingData')
                                            md-content(class="md-padding md-content-wrapper" ng-if="!isOffboarding")
                                                .unavailable-text(ng-if='svcaccOnboardedData.keys.length==0')
                                                    | No Service Accounts Available
                                                div.tiles-wrapper(img="'safe.png'" loading="isLoadingData")
                                                    .tiles-wrapper
                                                        .loader-wrapper(ng-show="loading" ng-cloak="")
                                                            .gif-wrp
                                                                img(src="assets/images/loading.gif" class="loading-state-img")
                                                        ul(ng-show="!loading" class="row" ng-cloak="")
                                                            li(class="tiles-container col-lg-3 col-md-3 col-sm-4 col-xs-6" ng-repeat="item in svcaccOnboardedData.keys | filter : searchValueSvcacc | limitTo: paginationLimit()" ng-click="viewSecret(item.svcaccname, 'md')" )
                                                                .tiles-container-block(class="padded" md-whiteframe="{{height}}" ng-init="height = 3" ng-mouseenter="height = 12" ng-mouseleave="height = 3" ng-class="safe-parent")
                                                                    .tile-image-wrapper
                                                                    .tile-label(uib-tooltip="{{item.svcaccname}}") {{item.svcaccname}}
                                                            li(ng-repeat="item in numOfTiles = ( svcaccOnboardedData.keys | filter : { svcaccname: searchValueSvcacc } ).length")
                                            .pagination-wrapper(ng-show='hasMoreItemsToShow()' ng-if="!isOffboarding")
                                                .pagination-count(ng-if="numOfSvcaccs>0") Displaying {{currentshown}} of {{numOfSvcaccs}}
                                                .pagination-button-wrapper(ng-click='showMoreItems()')
                                                    button.show-more-btn VIEW MORE
                                                    span
                                                        img(src="assets/icons/front-arrow.svg")
                        md-content(class="au-tabs-inner _md" ng-init="displayGrid" ng-if="viewPassword")
                            .create-folder-container.slide-header
                                    .function-text
                                        .clearfix
                                            .editColor.left.static
                                                .glyphicon.glyphicon-chevron-left(ng-click="goToMyServiceAccounts()")
                                            div.left
                                                span
                                                    span {{svcaccSecretData.svcaccname}}                                                    
                            div.data-management-content
                                text(ng-if="ifSecret && write") You have read and reset permission in this Service Account. Click the copy icon/view icon to get the password. Use the "Reset" link to reset the Service Account password.
                                text(ng-if="ifSecret && !write") You have read permission in this Service Account. Click the copy icon/view icon to get the password.
                                .row.change-svc-table-container
                                    loading-state(ng-if='isLoadingData')
                                    .row.table-header.solid-header(ng-show="!isLoadingData")
                                        .container.name.cell.col-lg-6.col-md-6.col-sm-6.col-xs-6.table-first-cell NAME
                                        .container.name.cell.col-lg-2.col-md-2.col-sm-2.col-xs-2 ACTION
                                        .container.name.cell.col-lg-4.col-md-4.col-sm-4.col-xs-4 LAST ACTIVITY
                                
                                    .accordion-list-main.adjustment
                                        .container.name.col-lg-12.col-md-12.col-sm-12.col-xs-12.cell 
                                            .cell.col-lg-6.col-md-6.col-sm-6.col-xs-6
                                                img.list-icon.folder(src="assets/icons/safe.svg" )
                                                input.form-control.input-box-style.au-textarea.input-disabled-text-wrapper.folder-row-secret-wrapper(rows="1" au-display="{{!showPassword}}" ng-disabled="true" ng-value="svcaccSecretData.secret.replace(anyRegex, '\u00B7')")
                                                input.form-control.input-box-style.au-textarea.input-disabled-text-wrapper.folder-row-secret-wrapper(rows="1" au-display="{{showPassword}}" ng-disabled="true" ng-value="svcaccSecretData.secret")
                                                .list-icon.icon-content_copy.vertical-sub-align(ng-if="ifSecret" ng-click="copyToClipboard($event, svcaccSecretData.secret, 'COPY_TO_CLIPBOARD')" uib-tooltip="Copy password to clipboard")
                                                .list-icon.icon-views.vertical-sub-align(ng-mousedown="showPassword = true;" ng-mouseup="showPassword = false" uib-tooltip="View password")
                                            .container.radio-inputs.col-lg-2.col-md-2.col-sm-2.col-xs-2.cell
                                                .down.view
                                                    .list-icon.reset(ng-if="ifSecret && write" ng-click="resetPasswordPopup(svcaccSecretData.svcaccname)" uib-tooltip="Reset password") Reset
                                            .container.name.col-lg-4.col-md-4.col-sm-4.col-xs-4.cell.modified-time 
                                                .cell.col-lg-4.col-md-4.col-sm-4.col-xs-4
                                                    span(ng-if="svcaccSecretData.modifiedBy==null && svcaccSecretData.modifiedAt==null") - 
                                                    span(ng-if="svcaccSecretData.modifiedBy!=null && svcaccSecretData.modifiedBy!=null" uib-tooltip="{{svcaccSecretData.modifiedBy}}") {{ modifiedTime }}
